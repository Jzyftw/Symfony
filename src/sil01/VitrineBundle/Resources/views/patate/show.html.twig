{% extends 'base.html.twig' %}

{% block body %}
    <h1>Patate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patate.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ patate.name }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{% if patate.sexe %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('patate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('patate_edit', { 'id': patate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
